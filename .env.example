# Israel Drugs MCP Server Configuration

# API Configuration  
ISRAEL_DRUGS_API_BASE_URL=https://israeldrugs.health.gov.il/GovServiceList/IDRServer
ISRAEL_DRUGS_IMAGES_BASE_URL=https://mohpublic.z6.web.core.windows.net/IsraelDrugs

# Server Configuration
PORT=3000
NODE_ENV=production

# Request Configuration
API_TIMEOUT_MS=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY_MS=1000

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_STATIC_HOURS=24
CACHE_TTL_DYNAMIC_MINUTES=30

# MCP Server Configuration
SERVER_NAME=israel-drugs-mcp-server
SERVER_VERSION=1.0.0
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Development/Debug (set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_API_RESPONSES=false